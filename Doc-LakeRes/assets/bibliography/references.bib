	file = {Achtziger-Zupančič et al_2017_A new global database to improve predictions of permeability distribution in.pdf:/home/bb/snap/zotero-snap/common/Zotero/storage/XQ229YKV/Achtziger-Zupančič et al_2017_A new global database to improve predictions of permeability distribution in.pdf:application/pdf},
