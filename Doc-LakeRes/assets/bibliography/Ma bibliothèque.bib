@article{ranjramPermeabilityCrystallineRock2015,
  title = {Is the Permeability of Crystalline Rock in the Shallow Crust Related to Depth, Lithology or Tectonic Setting?},
  author = {Ranjram, M. and Gleeson, T. and Luijendijk, E.},
  date = {2015-02},
  journaltitle = {Geofluids},
