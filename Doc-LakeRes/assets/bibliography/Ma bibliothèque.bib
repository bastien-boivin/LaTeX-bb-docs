  title = {{{SWAT}}+{{MODFLOW}}: {{A New Hydrologic Model}} for {{Simulating Surface-Subsurface Flow}} in {{Managed Watersheds}}},
  shorttitle = {{{SWAT}}+{{MODFLOW}}},
  author = {Bailey, Ryan and Abbas, Salam and Arnold, Jeffrey and White, Michael},
