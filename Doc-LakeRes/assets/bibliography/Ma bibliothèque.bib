@article{abherveIntegrationChangementClimatique2024,
  title = {Intégration du changement climatique dans la gestion des ressources en eau : exemple du bassin rennais},
  shorttitle = {Intégration du changement climatique dans la gestion des ressources en eau},
  author = {Abhervé, Ronan and De Dreuzy, Jean-Raynald and Gaubert, Jean-Yves and Geneau, Laurent and Lousail, Stéphane and Têtu, Benoit and Guéguen, Boris and Longuevergne, Laurent and Roques, Clément and Aquilina, Luc},
  date = {2024-05-20},
