@article{tashieWatershedScaleEffectiveHydraulic2021,
  title = {Watershed-{{Scale Effective Hydraulic Properties}} of the {{Continental United States}}},
  author = {Tashie, Arik and Pavelsky, Tamlin and Band, Lawrence and Topp, Simon},
