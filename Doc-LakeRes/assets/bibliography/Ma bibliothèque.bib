@article{boissonComparisonSurfaceGroundwater2014,
  title = {Comparison of Surface and Groundwater Balance Approaches in the Evaluation of Managed Aquifer Recharge Structures: {{Case}} of a Percolation Tank in a Crystalline Aquifer in {{India}}},
  shorttitle = {Comparison of Surface and Groundwater Balance Approaches in the Evaluation of Managed Aquifer Recharge Structures},
  author = {Boisson, A. and Baïsset, M. and Alazard, M. and Perrin, J. and Villesseche, D. and Dewandel, B. and Kloppmann, W. and Chandra, S. and Picot-Colbeaux, G. and Sarah, S. and Ahmed, S. and Maréchal, J.C.},
